<?xmlaop version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- p命名空间注入 -->
    <bean id="studentp" class="com.atguigu.ioc.xml.dimap.Student"
    p:sid="003" p:sname="张芮溪" p:courseList-ref="courseList" p:teacherMap-ref="teacherMap">
    </bean>

    <bean id="student" class="com.atguigu.ioc.xml.dimap.Student">
        <property name="sid" value="001"></property>
        <property name="sname" value="陈智奕"></property>

        <!--注入List map集合属性 用util-->
        <property name="courseList" ref="courseList"></property>
        <property name="teacherMap" ref="teacherMap"></property>

    </bean>

    <!--引用集合类型的bean
    1.创建stu teacher course对象
    2.util
    -->
    <util:list id="courseList">
        <ref bean="course1"></ref>
        <ref bean="course2"></ref>
    </util:list>

    <util:map id="teacherMap">
        <entry>
            <key>
                <value>10010</value>
            </key>
            <ref bean="teacher1"></ref>
        </entry>
        <entry>
            <key>
                <value>10020</value>
            </key>
            <ref bean="teacher2"></ref>
        </entry>
    </util:map>

    <bean id="course1" class="com.atguigu.ioc.xml.dimap.Course">
        <property name="courseName" value="java开发"></property>
    </bean>

    <bean id="course2" class="com.atguigu.ioc.xml.dimap.Course">
        <property name="courseName" value="C++开发"></property>
    </bean>

    <bean id="teacher1" class="com.atguigu.ioc.xml.dimap.Teacher">
        <property name="teacherName" value="陈锋"></property>
        <property name="teacherId" value="1"></property>
    </bean>

    <bean id="teacher2" class="com.atguigu.ioc.xml.dimap.Teacher">
        <property name="teacherName" value="大年"></property>
        <property name="teacherId" value="2"></property>
    </bean>



</beans>